generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id        String   @id @default(cuid())
  title     String
  lists     List[]   @relation("BoardToList") // Only define the relation name here
  createdAt DateTime @default(now())
}

model List {
  id       String   @id @default(cuid())
  title    String
  order    Int
  boardId  String
  board    Board    @relation("BoardToList", fields: [boardId], references: [id], onDelete: Cascade) 
  cards    Card[]   @relation("ListToCard") // Do not specify onDelete here
}

model Card {
  id          String   @id @default(cuid())
  title       String
  description String?  // Allow optional descriptions
  order       Int
  listId      String
  list        List     @relation("ListToCard", fields: [listId], references: [id], onDelete: Cascade) // onDelete only here
}
